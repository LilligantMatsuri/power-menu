<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.nkming.powermenu.RevealView
		android:id="@+id/reveal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true">

		<ImageView
			android:id="@+id/settings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right|top"
			android:padding="8dp"
			android:layout_marginRight="16dp"
			android:layout_marginTop="8dp"
			android:background="?selectableItemBackground"
			android:src="@drawable/outline_settings_white_24" />
	</androidx.coordinatorlayout.widget.CoordinatorLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<FrameLayout
			android:id="@+id/sleep_btn_bound"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:paddingTop="@dimen/action_button_normal_vertical_extended_area"
			android:paddingBottom="@dimen/action_button_normal_vertical_extended_area"
			android:paddingLeft="@dimen/action_button_normal_horizontal_extended_area"
			android:paddingRight="@dimen/action_button_normal_horizontal_extended_area"
			android:clipToPadding="false">

			<com.shamanland.fab.FloatingActionButton
				android:id="@+id/sleep_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_action_sleep"
				android:clickable="false"
				android:focusable="false"
				app:floatingActionButtonColor="@color/sleep_bg"
				app:floatingActionButtonSize="normal"/>
		</FrameLayout>

		<FrameLayout
			android:id="@+id/shutdown_btn_bound"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/sleep_btn_bound"
			android:layout_alignTop="@id/sleep_btn_bound"
			android:paddingTop="@dimen/action_button_normal_vertical_extended_area"
			android:paddingBottom="@dimen/action_button_normal_vertical_extended_area"
			android:paddingLeft="@dimen/action_button_normal_horizontal_extended_area"
			android:paddingRight="@dimen/action_button_normal_horizontal_extended_area"
			android:clipToPadding="false">

			<com.shamanland.fab.FloatingActionButton
				android:id="@+id/shutdown_id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_action_shutdown"
				android:clickable="false"
				android:focusable="false"
				app:floatingActionButtonColor="@color/shutdown_bg"
				app:floatingActionButtonSize="normal"/>
		</FrameLayout>

		<FrameLayout
			android:id="@+id/restart_btn_bound"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/sleep_btn_bound"
			android:layout_alignTop="@id/sleep_btn_bound"
			android:paddingTop="@dimen/action_button_normal_vertical_extended_area"
			android:paddingBottom="@dimen/action_button_normal_vertical_extended_area"
			android:paddingLeft="@dimen/action_button_normal_horizontal_extended_area"
			android:paddingRight="@dimen/action_button_normal_horizontal_extended_area"
			android:clipToPadding="false">

			<com.shamanland.fab.FloatingActionButton
				android:id="@+id/restart_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_action_restart"
				android:clickable="false"
				android:focusable="false"
				app:floatingActionButtonColor="@color/restart_bg"
				app:floatingActionButtonSize="normal"/>
		</FrameLayout>

		<TextView
			android:id="@+id/restart_normal_label"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="8dp"
			android:layout_toLeftOf="@id/restart_btn_bound"
			android:layout_alignTop="@id/restart_btn_bound"
			android:layout_alignBottom="@id/restart_btn_bound"
			android:gravity="center_vertical|right"
			android:visibility="invisible"
			android:clickable="false"
			android:focusable="false"
			android:textAppearance="@style/TextAppearance.AppCompat.Body2"
			android:text="@string/restart_mode_normal"/>

		<FrameLayout
			android:id="@+id/restart_recovery_btn_bound"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@id/restart_btn_bound"
			android:layout_alignRight="@id/restart_btn_bound"
			android:layout_marginRight="16dp"
			android:visibility="invisible"
			android:paddingTop="@dimen/action_button_mini_vertical_extended_area"
			android:paddingBottom="@dimen/action_button_mini_vertical_extended_area"
			android:paddingLeft="@dimen/action_button_mini_horizontal_extended_area"
			android:paddingRight="@dimen/action_button_mini_horizontal_extended_area"
			android:clipToPadding="false">

			<com.shamanland.fab.FloatingActionButton
				android:id="@+id/restart_recovery_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="0dp"
				android:clickable="false"
				android:focusable="false"
				android:src="@drawable/ic_action_restart_recovery"
				app:floatingActionButtonColor="@color/restart_bg"
				app:floatingActionButtonSize="mini"/>
		</FrameLayout>

		<TextView
			android:id="@+id/restart_recovery_label"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_toLeftOf="@id/restart_recovery_btn_bound"
			android:layout_alignTop="@id/restart_recovery_btn_bound"
			android:layout_alignBottom="@id/restart_recovery_btn_bound"
			android:layout_alignRight="@id/restart_normal_label"
			android:gravity="center_vertical"
			android:visibility="invisible"
			android:clickable="false"
			android:focusable="false"
			android:textAppearance="@style/TextAppearance.AppCompat.Body2"
			android:text="@string/restart_mode_recovery"/>

		<FrameLayout
			android:id="@+id/restart_bootloader_btn_bound"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@id/restart_recovery_btn_bound"
			android:layout_alignRight="@id/restart_recovery_btn_bound"
			android:visibility="invisible"
			android:paddingTop="@dimen/action_button_mini_vertical_extended_area"
			android:paddingBottom="@dimen/action_button_mini_vertical_extended_area"
			android:paddingLeft="@dimen/action_button_mini_horizontal_extended_area"
			android:paddingRight="@dimen/action_button_mini_horizontal_extended_area"
			android:clipToPadding="false">

			<com.shamanland.fab.FloatingActionButton
				android:id="@+id/restart_bootloader_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="0dp"
				android:clickable="false"
				android:focusable="false"
				android:src="@drawable/ic_action_restart_bootloader"
				app:floatingActionButtonColor="@color/restart_bg"
				app:floatingActionButtonSize="mini"/>
		</FrameLayout>

		<TextView
			android:id="@+id/restart_bootloader_label"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_toLeftOf="@id/restart_bootloader_btn_bound"
			android:layout_alignTop="@id/restart_bootloader_btn_bound"
			android:layout_alignBottom="@id/restart_bootloader_btn_bound"
			android:layout_alignRight="@id/restart_normal_label"
			android:gravity="center_vertical"
			android:visibility="invisible"
			android:clickable="false"
			android:focusable="false"
			android:textAppearance="@style/TextAppearance.AppCompat.Body2"
			android:text="@string/restart_mode_bootloader"/>

		<FrameLayout
			android:id="@+id/screenshot_btn_bound"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/shutdown_btn_bound"
			android:layout_alignLeft="@id/sleep_btn_bound"
			android:paddingTop="@dimen/action_button_normal_vertical_extended_area"
			android:paddingBottom="@dimen/action_button_normal_vertical_extended_area"
			android:paddingLeft="@dimen/action_button_normal_horizontal_extended_area"
			android:paddingRight="@dimen/action_button_normal_horizontal_extended_area"
			android:clipToPadding="false">

			<com.shamanland.fab.FloatingActionButton
				android:id="@+id/screenshot_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_action_screenshot"
				android:clickable="false"
				android:focusable="false"
				app:floatingActionButtonColor="@color/screenshot_bg"
				app:floatingActionButtonSize="normal"/>
		</FrameLayout>
	</RelativeLayout>
</FrameLayout>
